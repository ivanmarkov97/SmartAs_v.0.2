<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDefault"
    tools:context="com.example.ivan.smartas.AddActivities.AddTime">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_time_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundDefault"
        app:theme="@style/ThemeOverlay.AppCompat.Light"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_time_next_btn"
        android:background="#39ba9b"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Далее"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/add_time_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="время"
        android:textSize="78sp"
        android:gravity="center"
        android:shadowColor="#303030"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textColor="@android:color/darker_gray"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
