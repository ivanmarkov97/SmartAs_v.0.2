<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_cost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDefault"
    tools:context="com.example.ivan.smartas.AddActivities.AddCost">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_cost_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_backgroung"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/add_cost_input_container"
        android:orientation="horizontal"
        android:layout_below="@+id/add_cost_toolbar"
        android:background="@drawable/gradient_backgroung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/add_cost_input_cost"
            android:background="@drawable/underline_edit_text"
            android:hint="0"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.7"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:id="@+id/add_cost_next_btn"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_btn_background"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_action_next_green" />

    </LinearLayout>

    <TextView
        android:id="@+id/add_cost_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/add_cost_input_container"
        android:layout_marginTop="50dp"
        android:textColor="#303030"
        android:text="Ваш баланс 168 р"/>

    <Button
        android:id="@+id/add_cost_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_cost_balance"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Пополнить"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:textAllCaps="false"
        android:background="@color/colorAccent"/>

</RelativeLayout>
