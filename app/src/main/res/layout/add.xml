<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D0D0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_scroll_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_add_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/imageView"
            android:background="#FEFEFE"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="70dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/imageView2"
            android:background="#FEFEFE"
            android:layout_margin="10dp"
            android:layout_height="70dp" />

        <ImageView
            android:layout_width="70dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/imageView3"
            android:background="#FEFEFE"
            android:layout_margin="10dp"
            android:layout_height="70dp" />

        <ImageView
            android:layout_width="70dp"
            android:background="#FEFEFE"
            android:layout_margin="10dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/imageView4"
            android:layout_height="70dp" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/add_subject_name"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/layout_pressed">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_item_bottom_add" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Математика"
                    android:id="@+id/add_subject_name_value"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_weight="0.91"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.09"
                    app:srcCompat="@drawable/ic_button_go_left"
                    android:layout_width="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/add_work_type"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/layout_pressed">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_item_bottom_add" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип работы"
                    android:id="@+id/add_work_type_value"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_weight="0.91"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.09"
                    app:srcCompat="@drawable/ic_button_go_left" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/add_work_cost"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/layout_pressed">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_item_bottom_add" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цена, руб."
                    android:id="@+id/add_work_cost_value"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_weight="0.9"
                    android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/add_deadline"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/layout_pressed">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_item_bottom_add" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Срок сдачи"
                    android:id="@+id/add_deadline_value"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_weight="0.9"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/add_description"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/layout_pressed">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_item_bottom_add" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Описание"
                    android:id="@+id/add_description_value"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_weight="0.9"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_publish_order"
        android:background="#39ba9b"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:text="Опубликовать"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>